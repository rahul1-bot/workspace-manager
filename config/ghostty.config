# Ghostty config for workspace-manager
# Runtime location: ~/Library/Application Support/com.mitchellh.ghostty/config
# Fallback XDG path: ~/.config/ghostty/config (used by standalone Ghostty.app)
# This file is a reference copy tracked in version control.

# Transparent background for glass effect
background-opacity = 0.0

# Bar cursor style
cursor-style = bar
cursor-style-blink = false

# Crisp text rendering
font-family = "Cascadia Code"
font-size = 17
font-thicken = false
adjust-cell-height = 50%

# Faster scrolling
mouse-scroll-multiplier = 3
scrollback-limit = 10000000

# Smooth scroll shader for sub-pixel interpolation
custom-shader = ~/.config/ghostty/smoothscroll.glsl
custom-shader-animation = true

# Vibrant terminal color palette (Snazzy-inspired)
# Bright, saturated colors for high contrast on glass backgrounds
foreground = #eff0eb
cursor-color = #97979b

# Normal colors (0-7)
palette = 0=#282a36
palette = 1=#ff5c57
palette = 2=#5af78e
palette = 3=#f3f99d
palette = 4=#57c7ff
palette = 5=#ff6ac1
palette = 6=#9aedfe
palette = 7=#f1f1f0

# Bright colors (8-15)
palette = 8=#686868
palette = 9=#ff5c57
palette = 10=#5af78e
palette = 11=#f3f99d
palette = 12=#57c7ff
palette = 13=#ff6ac1
palette = 14=#9aedfe
palette = 15=#f1f1f0
